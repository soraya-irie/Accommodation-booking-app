<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: rooms_path, method: :get, local: true, class: "d-flex flex-column align-items-center" do |form| %>
      <h4 class="mb-3">エリア検索</h4>
      <div class="form-group">
        <%= form.label :address, 'エリア名', class: 'form-label' %>
        <%= form.text_field :address, class: 'form-control' %>
      </div>
      <div class="form-group mt-3">
        <%= form.submit '検索', class: 'btn btn-primary' %>
      </div>
        <% end %>
    </div>
  </div>
</div>