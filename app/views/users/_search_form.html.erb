<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: rooms_path, method: :get, local: true, class: "d-flex flex-column align-items-center shadow p-4 rounded" do |form| %>
        <h4 class="mb-3 text-center">エリア検索</h4>
        <div class="mb-3 w-100">
          <%= form.label :address, 'エリア名', class: 'form-label' %>
          <%= form.text_field :area, class: 'form-control', placeholder: "エリア名を入力" %>
        </div>
        <div class="d-grid">
          <%= form.submit '検索', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
