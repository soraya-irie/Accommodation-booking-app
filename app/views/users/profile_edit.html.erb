<div class="container">
  <h2>プロフィール編集画面</h2>
  <div class="d-flex flex-column mb-3 align-items-center">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="p-2">
        <%= f.label :icon_image, "アイコン画像", class: 'form-label' %>
        <%= f.file_field :icon_image, class: 'form-control' %>
      </div>
      <div class="p-2">
        <%= f.label :name, "名前", class: 'form-label' %>
        <%= f.text_area :name, class: 'form-control' %>
      </div>
      <div class="p-2">
        <%= f.label :self_introduction, "料金", class: 'form-label' %>
        <%= f.number_field :self_introduction, class: 'form-control' %>
      </div>
      <div class="p-2">
        <%= f.submit "保存", class: 'btn btn-primary' %>
      </div>
      <div class="p-2">
        <%= link_to "戻る", users_profile_path %>
      </div>
    <% end %>
  </div>
</div>


