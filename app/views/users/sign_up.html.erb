<h3>ユーザー新規作成</h3>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"ユーザー名" %></th>
      <td><%= f.text_field :name, placeholder: "ユーザー名を入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :email ,"メールアドレス" %></th>
      <td><%= f.text_field :email, placeholder: "メールアドレスを入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :password ,"パスワード" %></th>
      <td><%= f.password_field :password, placeholder: "パスワードを入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :password_confirmation ,"確認用パスワード" %></th>
      <td><%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "新しいアカウントを作成"%></li>
      <li><%= link_to "アカウントをお持ちの方はログイン", :users %></li>
    </ul>
  </div>
<% end %>
