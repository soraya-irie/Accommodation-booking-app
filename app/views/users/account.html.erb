<h2 class="text-center my-4">アカウントページ</h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', readonly: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control', value: '**********', readonly: true %>
        </div>

        <p class="mb-3">
          <%= link_to "アカウントを編集", edit_user_registration_path, class: "btn btn-primary w-100" %>
        </p>

        <p class="mb-3">
          <%= link_to "プロフィール", profile_users_path, class: "btn btn-outline-secondary w-100" %>
        </p>

        <p class="mb-3">
          <%= link_to "ホーム画面へ戻る", :root, class: "btn btn-outline-secondary w-100" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
