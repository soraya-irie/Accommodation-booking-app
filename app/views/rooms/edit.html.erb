<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6"> <!-- 幅をcol-md-8からcol-md-6に変更 -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="text-center mb-4">施設情報の編集画面</h2>
          <%= form_with(model: @room, local: true, html: { multipart: true }) do |f| %>
            <div class="mb-3">
              <%= f.label :name, "施設名", class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :introduction, "施設詳細", class: 'form-label' %>
              <%= f.text_area :introduction, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :price_per_night, "料金", class: 'form-label' %>
              <%= f.number_field :price_per_night, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :address, "住所", class: 'form-label' %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :room_image, "施設画像", class: 'form-label' %>
              <%= f.file_field :room_image, class: 'form-control' %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "保存", class: 'btn btn-primary' %>
              <%= link_to "戻る", rooms_path, class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
